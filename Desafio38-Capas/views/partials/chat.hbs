<div class="mx-3 rounded-4 bg-primary p-2 text-dark bg-opacity-10">
    <legend class="mx-3 fs-1 fw-bold" id="formLegend">Centro de Mensajes (CompresiÃ³n: %)</legend>
    <form class="mt-3 " id="formChat">
        <fieldset>
                
                <div class="mx-3">
                    <label class="form-label">Email address</label>
                    <input type="email" id="mailChat" class="form-control" placeholder="name@example.com">    
                </div>
                <div class="mx-3">
                    <label class="form-label">Nombre</label>
                    <input type="text" id="nombreChat" class="form-control" placeholder="Nombre">    
                </div>
                <div class="mx-3">
                    <label class="form-label">Apellido</label>
                    <input type="text" id="apellidoChat" class="form-control" placeholder="Apellido">    
                </div>
                <div class="mx-3">
                    <label class="form-label">Edad</label>
                    <input type="number" id="edadChat" class="form-control" placeholder="Edad">    
                </div>     
                <div class="mx-3">
                    <label class="form-label">Alias</label>
                    <input type="text" id="aliasChat" class="form-control" placeholder="Alias">    
                </div>        
                <div class="mx-3">
                    <label class="form-label">Avatar</label>
                    <input type="text" id="avatarChat" class="form-control" placeholder="Avatar">    
                </div>                      
                <div class="mt-3 mx-3">
                    <label class="form-label">Ingrese su mensaje:</label>
                    <textarea class="form-control" id="mensajeChat" rows="2"></textarea>
                    
                
                </div>
                <p class="mx-3 fw-bold text-danger" id="mensajeErrorChat"></p>
        </fieldset>
    </form>
    <button class="btn btn-primary mx-3 mb-3" id="enviarChat">Enviar!</button>
    <table id="tablaChat" class="table">
        <tbody id="listaChats">

        </tbody>
    </table>    
</div>
