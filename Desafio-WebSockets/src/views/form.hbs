{{> nav }}
<div class='container mt-5'>
    <div class='row'>
        <div class='col'>
            <form id="data">
                <div class='mb-3'>
                    <label class='form-label'>Nombre del Producto</label>
                    <input class='form-control' id='nombre' />
                </div>
                <div class='mb-3'>
                    <label class='form-label'>Precio en AR$</label>
                    <input class='form-control' id='precio' />
                </div>
                <div class='mb-3'>
                    <label class='form-label'>URL de la imagen</label>
                    <input class='form-control' id='urlImagen' />
                </div>
                <button type='button' class='btn btn-primary' id="guardar">Guardar</button>
            </form>
        </div>
    </div>
</div>

<div class='container mt-5'>
    <div class='row'>
        <div class='col'>
            <table class='table'>
                <thead class='table-dark'>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                </thead>
                <tbody id="lista">
                    {{!-- Mientras alla productos que vaya cargando una linea --}}
                    {{!-- {{#each lista}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.nombre}}</td>
                        <td>AR${{this.precio}}</td>
                        <td><img src="{{this.urlImagen}}" height="30px"></td>
                    </tr>
                    {{/each}} --}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class='container mt-5'>
    <div class='row'>
        <div class='col' id="centro-mensajes">
            <div class="text-bg-dark p-3" style="margin-bottom: 5px;">Centro de mensajes</div>
            <div class="input-group mb-3">
                <span class="input-group-text">@</span>
                <input type="email" class="form-control" placeholder="Email" aria-label="Username" aria-describedby="basic-addon1" id="email">
            </div>
            <div class="input-group mb-3" id="chat"></div>
            <div class="input-group" style="margin-bottom: 5px;">
                <span class="input-group-text">Su mensaje:</span>
                <textarea class="form-control" aria-label="With textarea" id="mensaje"></textarea>
            </div>
            <button type='button' class='btn btn-primary' id="enviar">Enviar</button>
        </div>
    </div>
</div>
<script src="js/main.js"></script>