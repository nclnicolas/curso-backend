<html lang='en'>

    <head>
        <meta charset='UTF-8' />
        <meta http-equiv='X-UA-Compatible' content='IE=edge' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <title>APP</title>
    </head>

    <body>
        <%- include('partials/nav') %>
        <div class='container mt-5'>
            <div class='row'>
                
                <h3> Bienvenido </h3>
                <h4 class="mb-2"><strong><%= user.nombre %></strong></h4>
                <img src="/<%= user.foto %>" class="rounded-circle shadow-4" style="width: 150px;" />

                <form action="/api/logout" method="get">

                    <!-- Configuracion para mostrar datos del cliente -->
                    <table class='table'>
                        <thead class='table-dark'>
                            <th>Los datos de tu cuenta</th>
                        </thead>
                        <tbody>
                            <tr><td>Email: <%= user.email %> </td></tr>
                            <tr><td>Edad:  <%= user.edad %> </td></tr>
                            <tr><td>Numero: <%= user.numero %> </td></tr>
                            <tr><td>Direccion: <%= user.direccion %> </td></tr>
                        </tbody>
                    </table>
                    
                    <form action="/api/logout" method="get">
                        <button type="submit" class="btn btn-dark">Logout</button>
                    </form>

                </form>
            </div>
        </div>
    </body>

</html>